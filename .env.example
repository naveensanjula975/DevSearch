# Django Settings
# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode - NEVER set to True in production
DEBUG=False

# Allowed hosts - comma-separated list of domains
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,127.0.0.1
ALLOWED_HOSTS=127.0.0.1,localhost

# Database Configuration
# For SQLite (development), leave these commented out
# For PostgreSQL (production), uncomment and configure:
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# Or individual settings:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=devsearch
# DB_USER=postgres
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# CORS Configuration
# Comma-separated list of allowed origins
# Example: CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AWS S3 Configuration (optional - for media/static file storage)
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Heroku Configuration (automatically set by Heroku)
# No need to set these manually when deploying to Heroku
# HEROKU=1
